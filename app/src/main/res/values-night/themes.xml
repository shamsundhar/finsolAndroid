        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/bg_color</item>
        <!-- Customize your theme here. -->
        <item name="sign_in_stroke">@color/black</item>
        <item name="sign_in_solid">@color/medium_grey</item>
