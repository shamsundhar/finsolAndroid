        <item name="text_light_color">@color/light_grey</item>
        <item name="text_box_color">@color/black</item>
        <item name="label_color">@color/white</item>
        <item name="label_color_light_bg">@color/light_grey</item>

        <item name="icon_tint_color">@color/white</item>
        <item name="bg_color">@color/black</item>
        <item name="bg_radio_group">@color/medium_grey</item>
        <item name="bg_radio_btn">@color/medium_grey</item>
        <item name="radio_btn_text_color">@color/light_grey</item>

        <item name="bg_table_left">@color/light_grey</item>
        <item name="bg_table_right">@color/medium_grey</item>
    </style>
</resources>