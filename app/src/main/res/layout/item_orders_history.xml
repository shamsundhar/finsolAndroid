<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/medium_margin"
    android:background="@drawable/bg_white_round_corner"
    android:id="@+id/root"
    android:layout_marginBottom="@dimen/medium_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status1"
        android:textSize="@dimen/medium_text_size"
        android:background="@drawable/bg_aliceblue_round_corners"
        android:padding="@dimen/small_margin"
        android:paddingStart="@dimen/large_margin"
        android:paddingEnd="@dimen/large_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:text="Buy"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolPnl"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toTopOf="@id/status1"
        app:layout_constraintBottom_toBottomOf="@id/status1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/dark_grey"
        android:text="PNL-25.07%"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolName"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@id/status1"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:text="Peugot"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolPrice"
        android:text="4563.70"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/symbolName"
        app:layout_constraintBottom_toBottomOf="@id/symbolName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolQuantity"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginTop="@dimen/medium_margin"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/symbolName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="QTY - 02"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolLtp"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginTop="@dimen/medium_margin"
        android:textColor="@color/dark_grey"
        android:layout_marginStart="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@id/symbolName"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="LTP - 589.55"/>



</androidx.constraintlayout.widget.ConstraintLayout>