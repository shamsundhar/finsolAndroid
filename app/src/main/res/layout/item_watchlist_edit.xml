<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/medium_margin"
    android:background="@drawable/bg_edittext_register"
    android:id="@+id/root"
    android:layout_marginBottom="@dimen/medium_margin"
    android:layout_marginStart="@dimen/medium_margin"
    android:layout_marginEnd="@dimen/medium_margin"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolName"
        android:textSize="@dimen/medium_text_size"
        android:fontFamily="@font/montserratbold"
        app:fontFamily="@font/montserratbold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Nasdaq"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolExpiry"
        android:textSize="@dimen/xsmall_text_size"
        android:layout_marginBottom="@dimen/xxsmall_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:fontFamily="@font/montserratbold"
        app:fontFamily="@font/montserratbold"
        android:textColor="?attr/title_color"
        tools:text="23/june"
        app:layout_constraintBottom_toBottomOf="@id/symbolName"
        app:layout_constraintStart_toEndOf="@id/symbolName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbolCity"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:fontFamily="@font/montserratregular"
        app:fontFamily="@font/montserratregular"
        app:layout_constraintTop_toBottomOf="@id/symbolName"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/light_grey"
        tools:text="Paris"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete"
        android:id="@+id/delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>