<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include android:id="@+id/toolbar" layout="@layout/custom_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:orientation="vertical">

            <TextView
                android:id="@+id/symbolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                app:fontFamily="@font/montserratsemibold"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginBottom="@dimen/medium_margin"
                android:text="Pueget"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status1"
                    android:textSize="@dimen/medium_text_size"
                    android:padding="@dimen/small_margin"
                    android:fontFamily="@font/montserratregular"
                    app:fontFamily="@font/montserratregular"
                    android:paddingStart="@dimen/large_margin"
                    android:paddingEnd="@dimen/large_margin"
                    android:textColor="@color/dark_grey"
                    android:text="DGCX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status2"
                android:textSize="@dimen/medium_text_size"
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"
                android:background="@drawable/bg_aliceblue_round_corners"
                android:padding="@dimen/small_margin"
                android:paddingStart="@dimen/large_margin"
                android:paddingEnd="@dimen/large_margin"
                android:textColor="@color/colorPrimary"
                android:text="Buy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status3"
                android:textSize="@dimen/medium_text_size"
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"
                android:background="@drawable/bg_teagreen_round_corners"
                android:padding="@dimen/small_margin"
                android:paddingStart="@dimen/large_margin"
                android:paddingEnd="@dimen/large_margin"
                android:layout_marginLeft="@dimen/large_margin"
                android:textColor="@color/black"
                android:text="Complete"/>
            </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:id="@+id/buyButton"
            android:layout_width="match_parent"
            android:textSize="@dimen/medium_text_size"
            android:fontFamily="@font/montserratsemibold"
            app:fontFamily="@font/montserratsemibold"
            android:background="@drawable/bg_primarycolor_round_corner"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/text_repeat_order" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_margin"
                android:background="@drawable/bg_white_round_corner">
                <TableRow android:paddingTop="@dimen/medium_margin"
                    android:paddingBottom="@dimen/medium_margin">
                    <TextView
                        android:text="@string/text_filled_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_grey"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/montserratregular"
                        app:fontFamily="@font/montserratregular"
                        android:layout_weight="1"
                        android:layout_column="1" />
                    <TextView
                        android:text="@string/text_avg_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/montserratregular"
                        app:fontFamily="@font/montserratregular"
                        android:layout_column="2" />
                    <TextView
                        android:text="@string/text_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratregular"
                        app:fontFamily="@font/montserratregular"
                        android:textColor="@color/dark_grey"
                        android:gravity="center_horizontal"
                        android:layout_column="3" />
                </TableRow>
                <TableRow
                    android:paddingBottom="@dimen/medium_margin">
                    <TextView
                        android:text="20/20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_column="1" />
                    <TextView
                        android:text="458.55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="2" />
                    <TextView
                        android:text="LIMIT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:layout_column="3" />
                </TableRow>
            </TableLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/medium_margin"
    android:padding="@dimen/large_margin"
    android:background="@drawable/bg_white_round_corner">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montserratregular"
        app:fontFamily="@font/montserratregular"
        android:text="status"
        android:id="@+id/status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="COMPLETE"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        app:fontFamily="@font/montserratsemibold"
        android:id="@+id/statusValue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:id="@+id/view1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:fontFamily="@font/montserratregular"
        app:fontFamily="@font/montserratregular"
        android:text="Time"
        android:id="@+id/time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        app:fontFamily="@font/montserratsemibold"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:text="11:34:23"
        android:id="@+id/timeValue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:id="@+id/view2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:fontFamily="@font/montserratregular"
        app:fontFamily="@font/montserratregular"
        android:text="Validity"
        android:id="@+id/validity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        app:fontFamily="@font/montserratsemibold"
        android:text="11:34:23"
        android:id="@+id/validityValue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/validity"
        android:id="@+id/view3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:fontFamily="@font/montserratregular"
        app:fontFamily="@font/montserratregular"
        android:text="Extra Trade ID"
        android:id="@+id/tradeId"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        app:fontFamily="@font/montserratsemibold"
        android:text="112738439905856493"
        android:id="@+id/tradeIdValue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tradeId"
        android:id="@+id/view4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:fontFamily="@font/montserratregular"
        app:fontFamily="@font/montserratregular"
        android:text="User"
        android:id="@+id/user"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        app:fontFamily="@font/montserratsemibold"
        android:text="Abhiram"
        android:id="@+id/userValue"/>
</androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="@dimen/medium_margin"
                android:textStyle="bold"
                android:textSize="@dimen/small_text_size"
                android:fontFamily="@font/montserratbold"
                app:fontFamily="@font/montserratbold"
                android:text="@string/text_tradeBreakdown"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/bg_white_round_corner">
        <TableRow android:paddingTop="@dimen/medium_margin"
            android:paddingBottom="@dimen/medium_margin">
            <TextView
                android:text="@string/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"
                android:layout_weight="1"
                android:layout_column="1" />
            <TextView
                android:text="@string/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"
                android:textColor="@color/dark_grey"
                android:gravity="center_horizontal"
                android:layout_column="2" />
            <TextView
                android:text="@string/text_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"
                android:textColor="@color/dark_grey"
                android:gravity="center_horizontal"
                android:layout_column="3" />
            <TextView
                android:text="@string/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"
                android:textColor="@color/dark_grey"
                android:gravity="center_horizontal"
                android:layout_column="4" />
        </TableRow>
        <TableRow
            android:paddingBottom="@dimen/medium_margin">
            <TextView
                android:text="12:47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserratbold"
                app:fontFamily="@font/montserratbold"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_column="1" />
            <TextView
                android:text="56435"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratbold"
                app:fontFamily="@font/montserratbold"
                android:gravity="center_horizontal"
                android:layout_column="2" />
            <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratbold"
                app:fontFamily="@font/montserratbold"
                android:gravity="center_horizontal"
                android:layout_column="3" />
            <TextView
                android:text="123.67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratbold"
                app:fontFamily="@font/montserratbold"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_column="4" />
        </TableRow>
    </TableLayout>

</LinearLayout>
    </ScrollView>
</LinearLayout>
