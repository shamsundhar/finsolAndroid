<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinsolAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorSecondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <!-- Customize your theme here. -->
        <item name="sign_in_stroke">@color/grey</item>
        <item name="sign_in_solid">@color/colorSecondary</item>
        <item name="signin_bg_color">@color/white</item>
        <item name="register_edittext_solid">@color/white</item>
        <item name="register_edittext_stroke">@color/grey</item>

        <item name="title_color">@color/black</item>
        <item name="text_light_color">@color/dark_grey</item>
        <item name="text_box_color">@color/dark_grey</item>
        <item name="label_color">@color/colorPrimary</item>
        <item name="label_color_light_bg">@color/dark_grey</item>

        <item name="icon_tint_color">@color/colorPrimary</item>
        <item name="bg_color">@color/colorSecondary</item>
        <item name="bg_radio_group">@color/alice_blue</item>
        <item name="bg_radio_btn">@color/alice_blue</item>
        <item name="radio_btn_text_color">@color/medium_grey</item>

        <item name="bottom_nav_color">@color/colorPrimary</item>

        <item name="bg_table_left">@color/alice_blue</item>
        <item name="bg_table_right">@color/lavender_blush</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>
</resources>